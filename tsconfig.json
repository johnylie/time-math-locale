{
  "compilerOptions": {
    "lib": ["DOM", "ES2020", "ESNext"],
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "downlevelIteration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.ts"]
}
